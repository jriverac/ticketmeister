<p id="notice"><%= notice %></p>

<h1>Listing <%= @tickets.count %> Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Zendesk</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Channel</th>
      <th>Requester</th>
      <th>Subject</th>
      <th>Request date</th>
      <th>Assigned date</th>
      <th>Solved date</th>
      <th>Platform</th>
      <th>Be driver</th>
      <th>Be other reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.zendesk_id, "http://newrelic.zendesk.com/agent/tickets/#{ticket.zendesk_id}" %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.priority %></td>
        <td><%= ticket.channel %></td>
        <td><%= ticket.requester %></td>
        <td><%= ticket.subject %></td>
        <td><%= ticket.request_date %></td>
        <td><%= ticket.assigned_date %></td>
        <td><%= ticket.solved_date %></td>
        <td><%= ticket.platform %></td>
        <td><%= ticket.be_driver %></td>
        <td><%= ticket.be_other_reason %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>

<%= form_tag import_tickets_tickets_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import tickets"%>
<% end %>
